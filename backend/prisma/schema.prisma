generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum ColumnType {
  TODO
  IN_PROGRESS
  DONE
}

model Board {
  id     String @id @default(uuid())
  name   String
  tasks  Task[]
}

model Task {
  id          String      @id @default(uuid())
  title       String
  description String
  position    Int
  type        ColumnType

  boardId String
  board   Board @relation(fields: [boardId], references: [id], onDelete: Cascade)

  @@index([boardId])
}